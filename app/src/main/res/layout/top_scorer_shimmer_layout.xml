<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/top_scorer_shimmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <View
                    android:id="@+id/team_logo_shimmer"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/player_name_shimmer"
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintStart_toEndOf="@id/team_logo_shimmer"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/team_name_shimmer"
                    android:layout_width="120dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintStart_toEndOf="@id/team_logo_shimmer"
                    app:layout_constraintTop_toBottomOf="@id/player_name_shimmer" />


                <View
                    android:id="@+id/goals_shimmer"
                    android:layout_width="80dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintStart_toEndOf="@id/team_logo_shimmer"
                    app:layout_constraintTop_toBottomOf="@id/team_name_shimmer" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <View
                    android:id="@+id/team_logo_shimmer1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/player_name_shimmer1"
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintStart_toEndOf="@id/team_logo_shimmer1"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/team_name_shimmer1"
                    android:layout_width="120dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintStart_toEndOf="@id/team_logo_shimmer1"
                    app:layout_constraintTop_toBottomOf="@id/player_name_shimmer1" />


                <View
                    android:id="@+id/goals_shimmer1"
                    android:layout_width="80dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintStart_toEndOf="@id/team_logo_shimmer1"
                    app:layout_constraintTop_toBottomOf="@id/team_name_shimmer1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <View
                    android:id="@+id/team_logo_shimmer2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/player_name_shimmer2"
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintStart_toEndOf="@id/team_logo_shimmer2"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/team_name_shimmer2"
                    android:layout_width="120dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintStart_toEndOf="@id/team_logo_shimmer2"
                    app:layout_constraintTop_toBottomOf="@id/player_name_shimmer2" />


                <View
                    android:id="@+id/goals_shimmer2"
                    android:layout_width="80dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintStart_toEndOf="@id/team_logo_shimmer2"
                    app:layout_constraintTop_toBottomOf="@id/team_name_shimmer2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


</LinearLayout>