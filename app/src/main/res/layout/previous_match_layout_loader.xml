<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/previous_match_shimmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/team1_logo_shimmer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toStartOf="@id/team1_goals_shimmer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/team1_goals_shimmer"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintBottom_toBottomOf="@id/team1_logo_shimmer"
                    app:layout_constraintEnd_toStartOf="@id/team2_goals_shimmer"
                    app:layout_constraintStart_toEndOf="@id/team1_logo_shimmer"
                    app:layout_constraintTop_toTopOf="@id/team1_logo_shimmer" />


                <View
                    android:id="@+id/team2_goals_shimmer"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintBottom_toBottomOf="@id/team1_logo_shimmer"
                    app:layout_constraintEnd_toStartOf="@id/team2_logo_shimmer"
                    app:layout_constraintStart_toEndOf="@id/team1_goals_shimmer"
                    app:layout_constraintTop_toTopOf="@id/team1_logo_shimmer" />

                <View
                    android:id="@+id/team2_logo_shimmer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/team2_goals_shimmer"
                    app:layout_constraintTop_toTopOf="parent" />


                <View
                    android:id="@+id/budding_player_shimmer_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="@id/team1_logo_shimmer"
                    app:layout_constraintStart_toStartOf="@id/team1_logo_shimmer"
                    app:layout_constraintTop_toBottomOf="@id/team1_logo_shimmer" />


                <View
                    android:id="@+id/mom_logo_shimmer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="@id/team2_logo_shimmer"
                    app:layout_constraintStart_toStartOf="@id/team2_logo_shimmer"
                    app:layout_constraintTop_toBottomOf="@id/team2_logo_shimmer" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="@id/budding_player_shimmer_logo"
                    app:layout_constraintStart_toStartOf="@id/budding_player_shimmer_logo"
                    app:layout_constraintTop_toBottomOf="@id/budding_player_shimmer_logo" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_bg"
                    app:layout_constraintEnd_toEndOf="@id/mom_logo_shimmer"
                    app:layout_constraintStart_toStartOf="@id/mom_logo_shimmer"
                    app:layout_constraintTop_toBottomOf="@id/mom_logo_shimmer" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

</LinearLayout>